/**
 * Implementation of hook_theme().
 */
function jquery_colorpicker_cck_theme() {
  return array(
    'jquery_colorpicker_cck' => array('arguments' => array('element' => NULL)),
    'jquery_colorpicker_cck_formatter_default' => array('arguments' => array('element' => NULL)),
    'jquery_colorpicker_cck_formatter_markup' => array('arguments' => array('element' => NULL)),
  );
}

/**
 * Implementation of hook_field_settings().
 */
function jquery_colorpicker_cck_field_settings($op, $field) {
  switch ($op) {
    case 'database columns':
      return array('value' => array('type' => 'varchar', 'length' => 64, 'not null' => FALSE, 'sortable' => TRUE));
    case 'views data':
      $allowed_values = content_allowed_values($field);
      break;
  }
}

